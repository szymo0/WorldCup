@model WorldCup.App.Pages.Matches.AddResultModel
@{
    ViewData["Title"] = "AddResult";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>AddResult</h2>
<div class="row">

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Wynik meczu po 90min:</label><br />
            @Html.DisplayFor(model => model.ResultModel.HomeTeamName)
            <input asp-for="ResultModel.HomeGoals" class="form-control" style="width: 50px;display: inline-block" />
            <span asp-validation-for="ResultModel.HomeGoals" class="text-danger"></span>
            :
            <input asp-for="ResultModel.AwayGoals" class="form-control" style="width: 50px; display: inline-block" />
            <span asp-validation-for="ResultModel.AwayGoals" class="text-danger"></span>
            @Html.DisplayFor(model => model.ResultModel.AwayTeamName)

        </div>
        <div>
            <label class="control-label">Wynik meczu po 45 minutach :</label><br />
            @Html.DisplayFor(model => model.ResultModel.HomeTeamName)
            <input asp-for="ResultModel.HomeGoalsInFirstHalf" class="form-control" style="width: 50px; display: inline-block" />
            <span asp-validation-for="ResultModel.HomeGoalsInFirstHalf" class="text-danger"></span>
            :
            <input asp-for="ResultModel.AwayGoalsInFirstHalf" class="form-control" style="width: 50px; display: inline-block" />
            <span asp-validation-for="ResultModel.AwayGoalsInFirstHalf" class="text-danger"></span>
            @Html.DisplayFor(model => model.ResultModel.AwayTeamName)
        </div>
        <div class="form-group">
            <label class="control-label">Dogrywka</label>
            <div class="checkbox">
                <label>
                    <input asp-for="ResultModel.HasExtraTime" /> @Html.DisplayNameFor(model => model.ResultModel.HasExtraTime)
                </label>
            </div>
