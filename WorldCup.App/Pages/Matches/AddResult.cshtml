                <input asp-for="ResultModel.AwayPenatly" class="form-control" style="width: 50px;display: inline-block" />
                <span asp-validation-for="ResultModel.AwayPenatly" class="text-danger"></span>
                @Html.DisplayFor(model => model.ResultModel.AwayTeamName)
