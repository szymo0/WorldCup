        </div>
        <div class="form-group">
            <label class="control-label">Karne</label>
            <div class="checkbox">
                <label>
                    <input asp-for="ResultModel.HasPenatly" /> @Html.DisplayNameFor(model => model.ResultModel.HasPenatly)
                </label>
            </div>
            @*<div id="penatly">
