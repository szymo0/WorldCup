                <input asp-for="ResultModel.AwayGoalsInExtraTime" class="form-control" style="width: 50px;display: inline-block" />
                <span asp-validation-for="ResultModel.AwayGoalsInExtraTime" class="text-danger"></span>
                @Html.DisplayFor(model => model.ResultModel.AwayTeamName)
