@page
@model WorldCup.App.Pages.Matches.BetModel

@{
    ViewData["Title"] = Model.Bet.Title;
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>@Html.Raw(Model.Bet.Desciption)</h2>

<h4>Typ</h4>
<hr />
<div class="row">

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Wynik meczu po 90min:</label><br />
            @Html.DisplayFor(model => model.Bet.HomeTeamName)
            <input asp-for="Bet.HomeGoals" class="form-control" style="width: 50px;display: inline-block" />
            <span asp-validation-for="Bet.HomeGoals" class="text-danger"></span>
            :
            <input asp-for="Bet.AwayGoals" class="form-control" style="width: 50px; display: inline-block" />
            <span asp-validation-for="Bet.AwayGoals" class="text-danger"></span>
            @Html.DisplayFor(model => model.Bet.AwayTeamName)

        </div>
        <div>
            <label class="control-label">Wynik meczu po 45 minutach :</label><br />
            @Html.DisplayFor(model => model.Bet.HomeTeamName)
            <input asp-for="Bet.HomeGoalsInFirstHalf" class="form-control" style="width: 50px; display: inline-block" />
            <span asp-validation-for="Bet.HomeGoalsInFirstHalf" class="text-danger"></span>
            : 
            <input asp-for="Bet.AwayGoalsInFirstHalf" class="form-control" style="width: 50px; display: inline-block" />
            <span asp-validation-for="Bet.AwayGoalsInFirstHalf" class="text-danger"></span>
            @Html.DisplayFor(model => model.Bet.AwayTeamName)
        </div>
        <div class="form-group">
            <label class="control-label">Dogrywka</label>
            <div class="checkbox">
                <label>
                    <input asp-for="Bet.HasExtraTime" /> @Html.DisplayNameFor(model => model.Bet.HasExtraTime)
                </label>
            </div>
            @*<div id="extraTime">
                @Html.DisplayFor(model => model.Bet.HomeTeamName)
