                <span asp-validation-for="Bet.HomeGoalsInExtraTime" class="text-danger"></span> :
                <input asp-for="Bet.AwayGoalsInExtraTime" class="form-control" style="width: 50px;display: inline-block" />
                <span asp-validation-for="Bet.AwayGoalsInExtraTime" class="text-danger"></span>
                @Html.DisplayFor(model => model.Bet.AwayTeamName)
            </div>*@
        </div>
        <div class="form-group">
            <label class="control-label">Karne</label>
            <div class="checkbox">
                <label>
                    <input asp-for="Bet.HasPenatly" /> @Html.DisplayNameFor(model => model.Bet.HasPenatly)
                </label>
            </div>
            @*<div id="penatly">
                @Html.DisplayFor(model => model.Bet.HomeTeamName)
                <input asp-for="Bet.HomePenatly" class="form-control" style="width: 50px;display: inline-block" />
                <span asp-validation-for="Bet.HomePenatly" class="text-danger"></span> :
                <input asp-for="Bet.AwayPenatly" class="form-control" style="width: 50px;display: inline-block" />
                <span asp-validation-for="Bet.AwayPenatly" class="text-danger"></span>
                @Html.DisplayFor(model => model.Bet.AwayTeamName)
            </div>*@
        </div>
        <input asp-for="Bet.MatchId" />
        <input asp-for="Bet.UserId" />

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>

</div>

